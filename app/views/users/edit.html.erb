<h1>プロフィールの編集</h1>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %> <!-- ここを追加 -->

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      
      <%= f.label :region %>
      <%= f.email_field :region, class: 'form-control' %>
      
      <%= f.submit "edit your information", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
